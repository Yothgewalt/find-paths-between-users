{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@layouts/core": [
                "./src/layouts/index.ts"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@context/*": [
                "./src/context/*"
            ],
            "@components/core": [
                "./src/components/index.ts"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@typings/*": [
                "./src/typings/*"
            ],
            "@utilities/*": [
                "./src/utilities/*"
            ],
            "@views/*": [
                "./src/views/*"
            ],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
